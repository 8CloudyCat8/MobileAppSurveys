<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Выберите интересующий вас опрос"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_home">

            <!-- Ряд 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Карточка 1 -->
                <Button
                    android:id="@+id/card1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card1_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card1Color"/>

                <!-- Карточка 2 -->
                <Button
                    android:id="@+id/card2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card2_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card2Color"

                    />

            </LinearLayout>

            <!-- Ряд 2 (новые карточки) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Карточка 3 -->
                <Button
                    android:id="@+id/card3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card3_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card3Color"/>

                <!-- Карточка 4 -->
                <Button
                    android:id="@+id/card4"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card4_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card4Color"/>
            </LinearLayout>

            <!-- Ряд 3 (новые карточки) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Карточка 5 -->
                <Button
                    android:id="@+id/card5"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card5_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card5Color"/>

                <!-- Карточка 6 -->
                <Button
                    android:id="@+id/card6"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card6_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card6Color"/>
            </LinearLayout>

            <!-- Ряд 4 (новые карточки) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Карточка 7 -->
                <Button
                    android:id="@+id/card7"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card7_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card7Color"/>

                <!-- Карточка 8 -->
                <Button
                    android:id="@+id/card8"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card8_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card8Color"/>
            </LinearLayout>

            <!-- Ряд 5 (новые карточки) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Карточка 9 -->
                <Button
                    android:id="@+id/card9"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card9_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card9Color"/>

                <!-- Карточка 10 -->
                <Button
                    android:id="@+id/card10"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card10_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card10Color"/>
            </LinearLayout>

            <!-- Ряд 6 (новые карточки) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Карточка 11 -->
                <Button
                    android:id="@+id/card11"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card11_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card11Color"/>

                <!-- Карточка 12 -->
                <Button
                    android:id="@+id/card12"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="@string/card12_text"
                    android:gravity="top"
                    android:backgroundTint="@color/card12Color"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>